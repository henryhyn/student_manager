<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.configuration.xml.reload" value="true"/>
    <package name="default" namespace="/" extends="struts-default">
        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>
        <action name="index">
            <result>/index.html</result>
        </action>
    </package>

    <package name="students" namespace="/students" extends="default">
        <action name="index" class="com.bestv.action.StudentAction" method="index">
            <result>/views/students/index.jsp</result>
        </action>
        <action name="show" class="com.bestv.action.StudentAction" method="show">
            <result>/views/students/show.jsp</result>
        </action>
        <action name="add" class="com.bestv.action.StudentAction" method="add">
            <result name="input">/views/students/form.jsp</result>
        </action>
        <action name="create" class="com.bestv.action.StudentAction" method="create">
            <result type="chain">index</result>
        </action>
        <action name="edit" class="com.bestv.action.StudentAction" method="edit">
            <result name="input">/views/students/form.jsp</result>
        </action>
        <action name="update" class="com.bestv.action.StudentAction" method="update">
            <result type="chain">index</result>
        </action>
        <action name="destroy" class="com.bestv.action.StudentAction" method="destroy">
            <result type="chain">index</result>
        </action>
    </package>
</struts>